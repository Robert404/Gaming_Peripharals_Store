@model Peripharals_Store.Models.ShoppingBasket.CartIndexModel


<h2>Your Cart</h2>

<div class="container">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Quantity</th>
                <th>Item</th>
                <th class="text-right">Price</th>
                <th class="text-right">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cart.Lines)
            {
                <tr>
                    <td class="text-center">@item.Quantity</td>
                    <td class="text-left">@item.Product.Name</td>
                    <td class="text-right">@item.Product.Price.ToString("c")</td>
                    <td class="text-right">
                        @((item.Quantity * item.Product.Price).ToString("c"))
                    </td>
                    <td>
                        <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="productId" value="@item.Product.Id" />
                            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                            <button type="submit" class="btn btn-danger">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>

            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total: </td>
                <td class="text-right">
                    @Model.Cart.ComputeTotalValue().ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-center">
        <!--Здесь передать все товары то есть Cart-->
        <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
        <a class="btn btn-info" asp-controller="Order" asp-action="Checkout" asp-route-cart="@Model.Cart.Lines">Checkout</a>
    </div>
</div>


