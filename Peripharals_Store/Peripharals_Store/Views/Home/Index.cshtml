@model IEnumerable<Peripharals_Store.Models.Product.ProductModel>
@using Peripharals_Store.Infrastructure

<div class="container">
    <main role="main" class="pb-3">
        <div class="card-columns">
            @foreach (var product in Model) 
            {
                <div class="card productCard">
                    <div class="card-img productImage">
                        <img src="@product.ImageUrl" width="340" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <h6>@product.Price.ToString("c")</h6>
                    </div>
                    <div class="card-footer">
                        <form asp-route-productId="@product.Id" asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()" asp-action="AddToCart" asp-controller="Cart" method="post">
                            <span class="card-text p-1">
                                <button type="submit" class="btn btn-success btn-sm">
                                    Add To Cart
                                </button>
                            </span>
                        </form>
                    </div>
                </div>
            }
        </div>
    </main>
</div>
